{
  "OpenTelemetry": {
    "ServiceName": "ExempleServiceName",
    "ServiceVersion": "1.2.0",
    "ServiceNamespace": "exemple",
    "Environment": "production",
    "CollectorEndpoint": "http://otel-collector:4317",
    "EnableConsoleExporter": false,
    "ResourceAttributes": {
      "team": "platform",
      "application": "user-management"
    },
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.1,
      "RecordExceptions": true,
      "EnableGrpcSupport": false,
      "IgnorePaths": [
        "/health",
        "/metrics", 
        "/ready",
        "/live",
        "/swagger"
      ],
      "IgnoreHosts": [
        "localhost",
        "127.0.0.1"
      ],
      "BatchExport": {
        "MaxQueueSize": 2048,
        "ScheduledDelayMilliseconds": 5000,
        "ExporterTimeoutMilliseconds": 30000,
        "MaxExportBatchSize": 512
      }
    },
    "Metrics": {
      "Enabled": true,
      "CustomMeters": [
        "Exemple.Business.*",
        "Exemple.Infrastructure.*"
      ]
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "OpenTelemetry": "Warning"
    }
  }
}